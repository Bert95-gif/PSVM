{% extends 'base.html.twig' %}

{% block title %}
  Editando consola
{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block body %}
  <h2>
    Editar consola
  </h2>
  <div class="mb-3" style="width: 300px;  margin: auto;">
    <div class="col-auto">
      <form action="{{
        path(
          'app_videoconsola_edit',
          {
            id: consola.id
          }
        )
        }}"
        method="post">
        {{ form_start(form) }}
        <div class="row">
          <div class="col">
            {{ form_row(form.nombre) }}
          </div>
        </div>
        <div class="row">
          <div class="col">
            {{ form_row(form.abreviatura) }}
          </div>
        </div>
        <div class="row">
          <div class="col">
            {{ form_row(form.empresa) }}
          </div>
        </div>
        <div class="row">
          <div class="col">
            {{ form_row(form.anioProduccion) }}
          </div>
        </div>
        <div class="row">
          <div class="col">
            {{ form_row(form.anioDescontinuacion) }}
          </div>
        </div>
        <div class="row">
          <div class="col">
            {{ form_row(form.imagen) }}
          </div>
        </div>
        <div class="row">
          <div class="col">
            {{ form_row(form.save) }}
          </div>
        </div>
        {{ form_end(form) }}
      </form>
    </div>
  </div>
  <a href="/consola" class="btn btn-secondary" style="margin-bottom:20px">
    Volver a la lista
  </a>
  <a href="/consola/show/{{ consola.id }}"
    class="btn btn-success"
    style="margin-bottom:20px">
    Volver a la consola actual
  </a>
{% endblock %}
