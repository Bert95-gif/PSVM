{% extends 'base.html.twig' %}

{% block title %}
  ¿Eliminar juego?
{% endblock %}

{% block body %}
  <div class="col-auto">
    <h3>
      ¿Seguro que quieres eliminar este juego?
    </h3>
    <a href="/videojuego/delete/{{ juego.id }}" class="btn btn-danger">Sí</a>
    <a href="/videojuego" class="btn btn-success">No</a>
    <div class="container">
      <img style="width:300px" src="{{ juego.imagen }}" />
    </div>
    <div class="container">
      <h4>
        Título: {{ juego.titulo }}
      </h4>
    </div>
  </div>
{% endblock %}
