{% extends 'base.html.twig' %}

{% block title %}
  Editando canción
{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block body %}
  <h2>
    Editar canción
  </h2>
  <div class="mb-3" style="width: 300px;  margin: auto;">
    <div class="col-auto">
      <form action="{{
        path(
          'app_cancion_edit',
          {
            id: cancion.id
          }
        )
        }}"
        method="post">
        {{ form_start(form) }}
        <div class="row">
          <div class="col">
            {{ form_row(form.nombre) }}
          </div>
        </div>
        <div class="row">
          <div class="col">
            {{ form_row(form.anio) }}
          </div>
        </div>
        <div class="row">
          <div class="col">
            {{ form_row(form.duracion) }}
          </div>
        </div>
        <div class="row">
          <div class="col">
            {{ form_row(form.interprete) }}
          </div>
        </div>Géneros musicales<br />
        <div class="row">
          <div class="col" style="text-align:left">
            {{ form_row(form.generos) }}
          </div>
        </div>
        <div class="row">
          <div class="col">
            {{ form_row(form.send) }}
          </div>
        </div>
        {{ form_end(form) }}
      </form>
    </div>
  </div>
  <a href="/cancion" class="btn btn-secondary" style="margin-bottom:20px">
    Volver
  </a>
{% endblock %}
