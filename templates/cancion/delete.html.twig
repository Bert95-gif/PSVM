{% extends 'base.html.twig' %}

{% block title %}
  ¿Eliminar canción?
{% endblock %}

{% block body %}
  <div class="col-auto">
    <h3>
      ¿Seguro que quieres eliminar esta canción?
    </h3>
    <a href="/cancion/delete/{{ cancion.id }}" class="btn btn-danger">Sí</a>
    <a href="/cancion" class="btn btn-success">No</a>
    <div class="container">
      <h4>
        Título: {{ cancion.nombre }}
      </h4>
    </div>
  </div>
{% endblock %}
